#include <stdio.h>


void reverse(int A[], int l, int r) {
    while (l < r) {
        int temp = A[l];
        A[l] = A[r];
        A[r] = temp;
        l++;
        r--;
    }
}

void nextGreaterPermutation(int A[], int n) {
    int ind = -1;


    for (int i = n - 2; i >= 0; i--) {
        if (A[i] < A[i + 1]) {
            ind = i;
            break;
        }
    }

   
    if (ind == -1) {
        reverse(A, 0, n - 1);
        return;
    }


    for (int i = n - 1; i > ind; i--) {
        if (A[i] > A[ind]) {
            int temp = A[i];
            A[i] = A[ind];
            A[ind] = temp;
            break;
        }
    }

  
    reverse(A, ind + 1, n - 1);
}


int main() {
    int A[] = {1, 2, 3};
    int n = sizeof(A) / sizeof(A[0]);

    nextGreaterPermutation(A, n);

    for (int i = 0; i < n; i++) {
        printf("%d ", A[i]);
    }

    return 0;
}
