#include <stdio.h>

void spiralMatrix(int mat[][100], int n, int m) {
    int top = 0, bottom = n - 1;
    int left = 0, right = m - 1;

    while (top <= bottom && left <= right) {

        // ðŸ‘‰ Left to Right (top row)
        for (int i = left; i <= right; i++) {
            printf("%d ", mat[top][i]);
        }
        top++;

        // ðŸ‘‰ Top to Bottom (right column)
        for (int i = top; i <= bottom; i++) {
            printf("%d ", mat[i][right]);
        }
        right--;

        // ðŸ‘‰ Right to Left (bottom row)
        if (top <= bottom) {
            for (int i = right; i >= left; i--) {
                printf("%d ", mat[bottom][i]);
            }
            bottom--;
        }

        // ðŸ‘‰ Bottom to Top (left column)
        if (left <= right) {
            for (int i = bottom; i >= top; i--) {
                printf("%d ", mat[i][left]);
            }
            left++;
        }
    }
}

int main() {
    int n, m;
    printf("Enter rows and columns: ");
    scanf("%d %d", &n, &m);

    int mat[100][100];
    printf("Enter matrix elements:\n");

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            scanf("%d", &mat[i][j]);
        }
    }

    printf("Spiral Order:\n");
    spiralMatrix(mat, n, m);

    return 0;
}
